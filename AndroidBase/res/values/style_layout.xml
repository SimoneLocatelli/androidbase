<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AB_LayoutStandard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AB_LayoutStandardFill" parent="@style/AB_LayoutStandard">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AB_LayoutStandardSpaced" parent="@style/AB_LayoutStandard">
        <item name="android:padding">@dimen/ab_spacing_medium</item>
    </style>

    <style name="AB_LayoutStandardFillSpaced" parent="@style/AB_LayoutStandardFill">
        <item name="android:padding">@dimen/ab_spacing_medium</item>
    </style>

</resources>